@model List<ToDoList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacaklar ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ToDoLisId</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										@if (item.Status == true)
										{
											<td><a href="/ToDoListController1/ChangeStatusToFalse/@item.ToDoLisId" class="btn btn-dark">Yapılmadı olarak işaretle</a></td>

										}
										else
										{
											<td><a href="/ToDoListController1/ChangeStatusToTrue/@item.ToDoLisId" class="btn btn-info">Yapıldı olarak işaretle</a></td>

										}
										<td><a href="/ToDoListController1/DeleteToDoList/@item.ToDoLisId" class="btn btn-danger">Sil</a></td>
										<td><a href="/ToDoListController1/UpdateToDoList/@item.ToDoLisId" class="btn btn-success">Güncelle</a></td>
									</tr>

								}



							</tbody>
						</table>
						<a href="/ToDoListController1/CreateToDoList/" class="btn btn-primary">Yeni Yapılacak İşlem Girişi</a>

					</div>
				</div>


			</div>

		</div>
	</div>
</div>


